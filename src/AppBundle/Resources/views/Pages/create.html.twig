{% extends 'AppBundle::base.html.twig' %}

{% block title %}Create Page{% endblock title %}
{% block javascripts %}
    <script src="{{ asset('js/jquery.inputmask.js') }}"></script>
    <script src="{{ asset('Resources/vendor/ckeditor/ckeditor.js') }}"></script>
    <script src="{{ asset('Resources/vendor/ckeditor/adapters/jquery.js') }}"></script>
    <style>
        #hiddenTypeAvatar1, #hiddenTypeAvatar2{
            display: none;
        }
    </style>
    <script>
    $(document).ready(function() {
        $("#form_phone").inputmask("+3(9999)9999999");
        $("#button1").click(function(){
            $("#hiddenTypeAvatar1").css("display","block");
            $("#hiddenTypeAvatar2").css("display","none");
            $("#form_avatar2").val('');
        });
        $("#button2").click(function(){
            $("#hiddenTypeAvatar2").css("display","block");
            $("#hiddenTypeAvatar1").css("display","none");
            $("#form_avatar").val('');
        });

    });
</script>
{% endblock %}
{% block body %}
    Create Page

    {% if message is defined %}
        <p class="bg-danger">{{ message }}</p>
    {% endif %}

    {% if form is defined %}
        {#{{ form_start(form) }}#}
        {#{{ form_widget(form) }}#}
        {#{{ form_end(form) }}#}
        {{ form_start(form) }}
        <div><label for="form_name" class='required'>Name</label>{{ form_widget(form.name) }}</div>
        <div><label for="form_login" class='required'>Login</label>{{ form_widget(form.login) }}</div>
        <div><label for="form_email" class='required'>E-mail</label>{{ form_widget(form.email) }}</div>
        <div>{{ form_widget(form.passwordHash) }}</div>
        <div><label for="form_bio" class='required'>Bio</label>{{ form_widget(form.bio) }}</div>
        <div><label for="form_address" class='required'>Address</label>{{ form_widget(form.address) }}</div>
        <div><label for="form_City" class='required'>City</label>{{ form_widget(form.City) }}</div>
        <div><label for="form_Country" class='required'>Country</label>{{ form_widget(form.Country) }}</div>

        <p><strong>Аватар</strong></p>
        <button type="button" id="button1" class="btn btn-info">Загрузить ссылку на фото</button>
        <button type="button" id="button2" class="btn btn-info">Загрузить фото</button>
        <div id="hiddenTypeAvatar1"><label for="form_avatar">Avatar</label>{{ form_widget(form.avatar) }}</div>
        <div id="hiddenTypeAvatar2"><label for="form_avatar2">Avatar_File</label>{{ form_widget(form.avatar2) }}</div>

        <div><label for="form_phone" class='required'>Phone Number</label>{{ form_widget(form.phone) }}</div>
        {{ form_end(form) }}
    {% endif %}

    <a href="{{ path('homepage') }}" class="btn btn-success">Main</a>
{% endblock body %}

